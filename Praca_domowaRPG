ðŸ“Œ Hero.java (dawniej Postac.java â€” zmienione nazwy)

package com.example.kreatorpostaci;

import java.util.ArrayList;

public class Hero {

    private String name;
    private String gender;
    private String race;
    private ArrayList<String> skills;
    private int strength;
    private int agility;

    public Hero(String name, String gender, String race, ArrayList<String> skills) {
        this.name = name;
        this.gender = gender;
        this.race = race;
        this.skills = skills;

        setStats();
    }

    private void setStats() {
        switch (race) {
            case "Krasnolud":
                strength = 12;
                agility = 8;
                break;
            case "Elf":
                strength = 8;
                agility = 12;
                break;
            case "Ork":
                strength = 13;
                agility = 7;
                break;
            default:
                strength = 10;
                agility = 10;
                break;
        }
    }

    public String generateInfo() {
        StringBuilder sb = new StringBuilder();
        sb.append("ImiÄ™: ").append(name).append("\n");
        sb.append("PÅ‚eÄ‡: ").append(gender).append("\n");
        sb.append("Rasa: ").append(race).append("\n");
        sb.append("Statystyki:\n");
        sb.append("â€¢ SiÅ‚a: ").append(strength).append("\n");
        sb.append("â€¢ ZrÄ™cznoÅ›Ä‡: ").append(agility).append("\n");
        sb.append("UmiejÄ™tnoÅ›ci:\n");
        if (skills.isEmpty()) sb.append("Brak\n");
        else {
            for (String s : skills) sb.append("â€¢ ").append(s).append("\n");
        }
        return sb.toString();
    }
}


