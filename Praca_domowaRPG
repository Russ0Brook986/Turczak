ðŸ“Œ MainActivity.java (zmienione nazwy)

package com.example.kreatorpostaci;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.*;
import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {

    private EditText inputName;
    private RadioGroup groupGender;
    private Spinner spinnerRace;

    private CheckBox chkFight, chkMagic, chkSteal;
    private Button btnCreate, btnClear;
    private TextView tvSummary, tvTeamSize;

    private ArrayList<Hero> team = new ArrayList<>();
    private int maxSkills = 2;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        inputName = findViewById(R.id.inputName);
        groupGender = findViewById(R.id.groupGender);
        spinnerRace = findViewById(R.id.spinnerRace);

        chkFight = findViewById(R.id.chkFight);
        chkMagic = findViewById(R.id.chkMagic);
        chkSteal = findViewById(R.id.chkSteal);

        btnCreate = findViewById(R.id.btnCreate);
        btnClear = findViewById(R.id.btnClear);

        tvSummary = findViewById(R.id.tvSummary);
        tvTeamSize = findViewById(R.id.tvTeamSize);

        // Spinner adapter
        ArrayAdapter<CharSequence> adapter = ArrayAdapter.createFromResource(
                this,
                R.array.race_list,
                android.R.layout.simple_spinner_item
        );
        adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
        spinnerRace.setAdapter(adapter);

        // skills limit
        View.OnClickListener skillLimiter = v -> {
            int selected =
                    (chkFight.isChecked() ? 1 : 0) +
                            (chkMagic.isChecked() ? 1 : 0) +
                            (chkSteal.isChecked() ? 1 : 0);

            if (selected > maxSkills) {
                ((CheckBox)v).setChecked(false);
                Toast.makeText(this, "Maksymalnie 2 umiejÄ™tnoÅ›ci!", Toast.LENGTH_SHORT).show();
            }
        };

        chkFight.setOnClickListener(skillLimiter);
        chkMagic.setOnClickListener(skillLimiter);
        chkSteal.setOnClickListener(skillLimiter);

        btnCreate.setOnClickListener(v -> createHero());
        btnClear.setOnClickListener(v -> clearFields());
    }

    private void createHero() {
        String name = inputName.getText().toString();
        if (name.isEmpty()) {
            inputName.setError("Wpisz imiÄ™!");
            return;
        }

        int genderId = groupGender.getCheckedRadioButtonId();
        if (genderId == -1) {
            Toast.makeText(this, "Wybierz pÅ‚eÄ‡!", Toast.LENGTH_SHORT).show();
            return;
        }
        RadioButton rb = findViewById(genderId);
        String gender = rb.getText().toString();

        String race = spinnerRace.getSelectedItem().toString();

        ArrayList<String> skills = new ArrayList<>();
        if (chkFight.isChecked()) skills.add("Walka");
        if (chkMagic.isChecked()) skills.add("Magia");
        if (chkSteal.isChecked()) skills.add("KradzieÅ¼");

        Hero h = new Hero(name, gender, race, skills);
        tvSummary.setText(h.generateInfo());

        team.add(h);
        tvTeamSize.setText("W druÅ¼ynie: " + team.size());
    }

    private void clearFields() {
        inputName.setText("");
        groupGender.clearCheck();
        spinnerRace.setSelection(0);

        chkFight.setChecked(false);
        chkMagic.setChecked(false);
        chkSteal.setChecked(false);

        tvSummary.setText("");
    }
}


